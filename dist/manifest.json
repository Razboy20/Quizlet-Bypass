{
    "manifest_version": 2,
    "name": "Quizlet Bypass",
    "version": "1.0",
    "description": "Removes the paywall from the Quizlet page",
    "icons": {
        "48": "icons/logo-48.png",
        "96": "icons/logo-96.png",
        "192": "icons/logo-192.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.quizlet.com/explanations/textbook-solutions/*"
            ],
            "js": [
                "quizlet.content.js"
            ]
        },
        {
            "matches": [
                "*://*.skuola.net/*"
            ],
            "js": [
                "skuola.content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "quizletbypass@rospino74.github.io",
            "strict_min_version": "48.0"
        }
    },
    "permissions": [
        "*://*.quizlet.com/*",
        "*://*.skuola.net/*",
        "webRequest",
        "cookies",
        "tabs"
    ]
}