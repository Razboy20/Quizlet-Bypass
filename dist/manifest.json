{
    "manifest_version": 2,
    "name": "Quizlet Paywall Remover",
    "version": "1.0",
    "description": "Removes the paywall from the Quizlet page",
    "icons": {
        "48": "icons/logo-48.png",
        "96": "icons/logo-96.png",
        "192": "icons/logo-192.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.quizlet.com/explanations/textbook-solutions/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "quizletbypass@marko.it",
            "strict_min_version": "42.0"
        }
    },
    "permissions": [
        "*://*.quizlet.com/*",
        "webRequest",
        "cookies",
        "tabs"
    ]
}