{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off",
        "max-len": "off",
        "no-plusplus": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "off"
        ]
    }
}